"server:app-serv")
	vim apps/server/app-serv/server.js
  ;;
"client:guest")
	vim apps/client/guest/index.html
  ;;
"client:member")
	vim apps/client/member/index.html
  ;;
"")
  echo "USAGE : ./edit [ server:ldap ||Â server:router || server:app-serv || client:guest || client:member ]"
  ;;
esac
